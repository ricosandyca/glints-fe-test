rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {  
    match /users/{userId} {
    	function isOwnResource() {
      	return request.auth != null && request.auth.uid == userId;
      }
      
      function isPublicResource() {
      	return get(/databases/$(database)/documents/users/$(userId)).data.is_public;
      }
    	
    	allow read: if isOwnResource() || isPublicResource();
      allow write: if isOwnResource();
    }
  }
}
